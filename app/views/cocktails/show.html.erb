<div class="banner-show" style="background-image: linear-gradient(rgba(201,94,218,0.3), rgba(56,62,62,0.4)), url(
<% if @cocktail["photo"].nil? %>
<%= @cocktail.img_url %>
<% else %>
<%= cl_image_path @cocktail.photo %>
<% end %>
);">
  <div class="container">
    <div class="description-box">
    <h1 class="text-white"><%= @cocktail.name %> <%= link_to "<i class='fas fa-trash-alt'></i>".html_safe, cocktail_path(@cocktail.id), method: :delete %></h1>
    <p class="text-white">
      <% if @in_update == false %>
      <%= @cocktail.description %> <%= link_to '<i class="fas fa-edit"></i>'.html_safe, "#", method: :patch %>
    </p>
    <% else %>
      <%= render '/cocktails/form_edit' %>
    <% end %>
    </div>
  </div>
</div>
<div class="container card-details-parent">
  <div class="card-details">
    <div class="add-dose">
      <h2>Ingredients</h2>
      <% @cocktail.doses.each  do |dose| %>
        <p>
          <strong><%= dose.ingredient.name %></strong>
          &nbsp;-&nbsp;
          <%= dose.description %>
          &nbsp;-&nbsp;
          <%= link_to "<i class='fas fa-trash-alt'></i>".html_safe, dose_path(dose.id), method: :delete %>
        </p>
      <% end %>
      <%= render '/doses/form' %>
    </div>
  </div>
</div>
