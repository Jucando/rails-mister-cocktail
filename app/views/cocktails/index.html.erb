<div class="container">
<h1>Your <span id="banner-typed-text"></span></h1>
<div class="row">
  <% @cocktails.each do |cocktail| %>
    <%= link_to cocktail_path(cocktail.id) do %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(201,94,218,0.3), rgba(56,62,62,0.6)), url(
        <% if cocktail["photo"].nil? %>
        <%= cocktail.img_url %>
        <% else %>
        <%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>
        <% end %>
        );">
          <div class="card-category">New</div>
          <div class="card-description">
            <h2> <%= cocktail.name %></h2>
            <p><%= cocktail.description %></p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
</div>
